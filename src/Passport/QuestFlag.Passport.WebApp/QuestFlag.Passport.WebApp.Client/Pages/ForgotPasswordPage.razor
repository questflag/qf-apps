@page "/forgot-password"
@using QuestFlag.Passport.UserClient
@inject PassportUserClient PassportClient

<PageTitle>Forgot Password — QuestFlag</PageTitle>

<div class="sso-container">
    <div class="sso-card">
        <div class="sso-header">
            <div class="brand-logo">QF</div>
            <h1 class="tenant-name">Forgot Password</h1>
            <p class="sign-in-subtitle">Enter your email and we'll send a reset link</p>
        </div>

        @if (_sent)
        {
            <div class="success-banner">
                ✓ If that email is registered, a password reset link has been sent. Check your inbox.
            </div>
            <div class="sso-footer"><a href="/login">Back to Sign In</a></div>
        }
        else
        {
            @if (_error != null) { <div class="error-banner">@_error</div> }

            <form @onsubmit="HandleSubmit">
                <div class="form-group">
                    <label>Email Address</label>
                    <input @bind="_email" type="email" placeholder="you@example.com" required />
                </div>
                <button type="submit" class="btn-primary" disabled="@_isSubmitting">
                    @(_isSubmitting ? "Sending…" : "Send Reset Link")
                </button>
            </form>
            <div class="sso-footer"><a href="/login">Back to Sign In</a></div>
        }
    </div>
</div>

