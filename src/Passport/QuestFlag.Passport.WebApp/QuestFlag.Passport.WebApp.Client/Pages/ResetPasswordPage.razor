@page "/reset-password"
@using QuestFlag.Passport.UserClient
@inject PassportUserClient PassportClient
@inject NavigationManager Nav

<PageTitle>Reset Password — QuestFlag</PageTitle>

<div class="sso-container">
    <div class="sso-card">
        <div class="sso-header">
            <div class="brand-logo">QF</div>
            <h1 class="tenant-name">Reset Password</h1>
            <p class="sign-in-subtitle">Enter your new password</p>
        </div>

        @if (_success)
        {
            <div class="success-banner">✓ Password reset successfully. You can now sign in.</div>
            <div class="sso-footer"><a href="/login">Sign In</a></div>
        }
        else
        {
            @if (_error != null) { <div class="error-banner">@_error</div> }
            <form @onsubmit="HandleReset">
                <div class="form-group">
                    <label>New Password</label>
                    <input @bind="_password" type="password" placeholder="••••••••" required />
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input @bind="_confirm" type="password" placeholder="••••••••" required />
                </div>
                <button type="submit" class="btn-primary" disabled="@_isSubmitting">
                    @(_isSubmitting ? "Resetting…" : "Reset Password")
                </button>
            </form>
        }
    </div>
</div>

