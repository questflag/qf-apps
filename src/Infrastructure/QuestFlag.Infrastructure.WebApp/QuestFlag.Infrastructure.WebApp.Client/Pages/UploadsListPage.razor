@page "/uploads"
@using QuestFlag.Infrastructure.Client
@using QuestFlag.Passport.Client
@using System.Text.Json
@implements IDisposable
@inject UploadApiService UploadApi
@inject PassportApiClient PassportApi
@inject IJSRuntime JS
@inject NavigationManager Nav

<PageTitle>My Uploads - QuestFlag</PageTitle>

<div class="max-w-7xl mx-auto p-4 space-y-4">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600">Upload Records</h1>
        <button class="btn btn-primary" @onclick='() => Nav.NavigateTo("/upload")'>+ New Upload</button>
    </div>

    <!-- Filters Bar -->
    <div class="card p-4 bg-gray-50 mb-6 border-0 shadow-sm">
        <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-3 items-end">
            <div>
                <label class="block text-xs font-semibold text-gray-600 uppercase tracking-widest mb-1">Tenant</label>
                <select @bind="FilterTenantSlug" @bind:after="OnTenantFilterChanged" class="input-field text-sm">
                    <option value="">All Tenants</option>
                    @if (_tenants != null)
                    {
                        @foreach (var t in _tenants)
                        {
                            <option value="@t.Slug">@t.Name</option>
                        }
                    }
                </select>
            </div>
            <div>
                <label class="block text-xs font-semibold text-gray-600 uppercase tracking-widest mb-1">User</label>
                <select @bind="FilterUserId" class="input-field text-sm" disabled="@(string.IsNullOrEmpty(FilterTenantSlug))">
                    <option value="">Any User</option>
                    @if (_usersForFilter != null)
                    {
                        @foreach (var u in _usersForFilter)
                        {
                            <option value="@u.Id">@u.DisplayName</option>
                        }
                    }
                </select>
            </div>
            <div>
                <label class="block text-xs font-semibold text-gray-600 uppercase tracking-widest mb-1">Category</label>
                <select @bind="FilterCategory" class="input-field text-sm">
                    <option value="">All</option>
                    <option value="backup">Backup</option>
                    <option value="core">Core System</option>
                    <option value="agents">Agents</option>
                    <option value="users">Users</option>
                    <option value="default">Default</option>
                </select>
            </div>
            <div>
                <label class="block text-xs font-semibold text-gray-600 uppercase tracking-widest mb-1">Status</label>
                <select @bind="FilterStatus" class="input-field text-sm">
                    <option value="">All</option>
                    <option value="Pending">Pending</option>
                    <option value="Uploading">Uploading</option>
                    <option value="Completed">Completed</option>
                    <option value="Failed">Failed</option>
                    <option value="Paused">Paused</option>
                </select>
            </div>
            <div class="flex space-x-2">
                <button class="btn btn-primary w-full" @onclick="ApplyFilters">Apply</button>
                <button class="btn btn-secondary w-full" @onclick="ResetFilters">Reset</button>
            </div>
        </div>
    </div>

    <!-- Data Table Card -->
    <div class="card overflow-x-auto">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr>
                    <th class="table-header cursor-pointer select-none hover:bg-gray-100" @onclick='() => Sort("TenantName")'>
                        <div class="flex items-center space-x-1"><span>Tenant</span> @SortIndicator("TenantName")</div>
                    </th>
                    <th class="table-header cursor-pointer select-none hover:bg-gray-100" @onclick='() => Sort("UserName")'>
                        <div class="flex items-center space-x-1"><span>User</span> @SortIndicator("UserName")</div>
                    </th>
                    <th class="table-header cursor-pointer select-none hover:bg-gray-100" @onclick='() => Sort("StoredFileName")'>
                        <div class="flex items-center space-x-1"><span>Filename</span> @SortIndicator("StoredFileName")</div>
                    </th>
                    <th class="table-header cursor-pointer select-none hover:bg-gray-100" @onclick='() => Sort("Category")'>
                        <div class="flex items-center space-x-1"><span>Category</span> @SortIndicator("Category")</div>
                    </th>
                    <th class="table-header cursor-pointer select-none hover:bg-gray-100" @onclick='() => Sort("Status")'>
                        <div class="flex items-center space-x-1"><span>Status</span> @SortIndicator("Status")</div>
                    </th>
                    <th class="table-header cursor-pointer select-none hover:bg-gray-100" @onclick='() => Sort("CreatedAtUtc")'>
                        <div class="flex items-center space-x-1"><span>Uploaded At</span> @SortIndicator("CreatedAtUtc")</div>
                    </th>
                    <th class="table-header w-32 border-b border-gray-200">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (_loading)
                {
                    <tr><td colspan="7" class="table-cell text-center p-8 text-gray-500">Loading records...</td></tr>
                }
                else if (_results == null || _results.Items.Count == 0)
                {
                    <tr><td colspan="7" class="table-cell text-center p-8 text-gray-500">No records found. Try adjusting filters.</td></tr>
                }
                else
                {
                    @foreach (var record in _results.Items)
                    {
                        var isCompleted = record.Status == 2; // Completed enum
                        var isFailed = record.Status == 3;
                        <tr class="hover:bg-blue-50/30 transition-colors group">
                            <td class="table-cell text-gray-600 text-xs font-mono">@record.TenantId.ToString().Substring(0,8)</td>
                            <td class="table-cell text-gray-600 text-xs font-mono">@record.UserId.ToString().Substring(0,8)</td>
                            <td class="table-cell font-medium max-w-[200px] truncate" title="@record.StoredFileName">@record.StoredFileName</td>
                            <td class="table-cell"><span class="badge badge-default">@record.Category</span></td>
                            <td class="table-cell">
                                @if (isCompleted) { <span class="badge badge-success">Completed</span> }
                                else if (isFailed) { <span class="badge border border-red-200 text-red-700 bg-red-50">Failed</span> }
                                else { <span class="badge badge-warning text-[10px] animate-pulse">Processing</span> }
                            </td>
                            <td class="table-cell text-gray-500 text-xs">@record.CreatedAtUtc.ToLocalTime().ToString("g")</td>
                            <td class="table-cell space-x-2 align-middle">
                                @if (isCompleted)
                                {
                                    <button class="text-blue-600 hover:text-blue-800 transition-colors p-1" title="Download" @onclick="() => DownloadLinkAsync(record.Id)">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path></svg>
                                    </button>
                                }
                                @if (IsTenantAdmin)
                                {
                                    <button class="text-red-600 hover:text-red-800 transition-colors p-1 opacity-0 group-hover:opacity-100" title="Delete" @onclick="() => DeleteRecordAsync(record.Id)">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    
    <!-- Pagination -->
    @if (_results != null && _results.TotalCount > 0)
    {
        <div class="flex items-center justify-between mt-4">
            <span class="text-sm text-gray-500">Showing @((_page - 1) * _pageSize + 1) to @(Math.Min(_page * _pageSize, _results.TotalCount)) of @_results.TotalCount results</span>
            <div class="flex space-x-2">
                <button class="btn btn-secondary text-xs h-8" disabled="@(_page == 1)" @onclick="PrevPage">Previous</button>
                <button class="btn btn-secondary text-xs h-8" disabled="@(_page * _pageSize >= _results.TotalCount)" @onclick="NextPage">Next</button>
            </div>
        </div>
    }

</div>

