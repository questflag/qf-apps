@page "/login"
@using QuestFlag.Passport.Client
@inject PassportApiClient PassportApi
@inject IJSRuntime JS
@inject NavigationManager Nav

<PageTitle>Login - QuestFlag</PageTitle>

<div class="min-h-[80vh] flex items-center justify-center p-4">
    <div class="card w-full max-w-md p-8 shadow-lg">
        <div class="text-center mb-8">
            <h1 class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600">QuestFlag Portal</h1>
            <p class="text-gray-500 text-sm mt-2">Sign in to your tenant account</p>
        </div>

        @if (_error != null)
        {
            <div class="bg-red-50 text-red-600 p-3 rounded-md text-sm mb-4 border border-red-200">
                @_error
            </div>
        }

        <form @onsubmit="HandleLogin">
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Organization (Tenant)</label>
                    <select @bind="_tenantSlug" class="input-field cursor-pointer" disabled="@(_loadingTenants || _tenants == null)">
                        <option value="">-- Select Tenant --</option>
                        @if (_tenants != null)
                        {
                            @foreach (var t in _tenants)
                            {
                                <option value="@t.Slug">@t.Name</option>
                            }
                        }
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Username</label>
                    <input @bind="_username" type="text" class="input-field" placeholder="Enter username" required />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                    <input @bind="_password" type="password" class="input-field" placeholder="••••••••" required />
                </div>

                <button type="submit" class="btn btn-primary w-full mt-6 flex items-center justify-center" disabled="@_isSubmitting">
                    @if (_isSubmitting)
                    {
                        <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        <span>Signing in...</span>
                    }
                    else
                    {
                        <span>Sign In</span>
                    }
                </button>
            </div>
        </form>
    </div>
</div>

@code {
    private IReadOnlyList<TenantDto>? _tenants;
    private bool _loadingTenants = true;
    private string _tenantSlug = "";
    private string _username = "";
    private string _password = "";
    private string? _error;
    private bool _isSubmitting;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _tenants = await PassportApi.GetTenantsAsync();
            if (_tenants.Count == 1)
            {
                _tenantSlug = _tenants[0].Slug;
            }
        }
        catch (Exception ex)
        {
            _error = "Failed to load tenants. API might be offline.";
            Console.WriteLine(ex);
        }
        finally
        {
            _loadingTenants = false;
        }
    }

    private async Task HandleLogin()
    {
        if (string.IsNullOrWhiteSpace(_tenantSlug))
        {
            _error = "Please select a tenant.";
            return;
        }

        _error = null;
        _isSubmitting = true;

        try
        {
            var tokenResponse = await PassportApi.LoginAsync(_tenantSlug, _username, _password);
            if (tokenResponse != null)
            {
                // Store tokens in JS localStorage
                await JS.InvokeVoidAsync("localStorage.setItem", "jwt_token", tokenResponse.AccessToken);
                await JS.InvokeVoidAsync("localStorage.setItem", "refresh_token", tokenResponse.RefreshToken);
                
                // Redirect to uploads screen
                Nav.NavigateTo("/uploads", forceLoad: true);
            }
        }
        catch (Exception ex)
        {
            _error = "Invalid username or password.";
            Console.WriteLine(ex);
        }
        finally
        {
            _isSubmitting = false;
        }
    }
}
